{
  compilerOptions: {
    experimentalDecorators: true,
    target: 'esnext',
    module: 'commonjs',
    declaration: true,
    outDir: 'dist',
    strict: true,
    allowSyntheticDefaultImports: true,
    resolveJsonModule: true,
    esModuleInterop: true,
    forceConsistentCasingInFileNames: true,
    sourceMap: true,
    allowJs: true,
    checkJs: true,
  },
  include: [
    'src/**/*.ts',
    'src/**/*.js'
  ],
};
